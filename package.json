{
  "name": "ts-express-starter",
  "version": "1.0.0",
  "description": "typescript express starter using esbuild",
  "main": "index.js",
  "devDependencies": {
    "concurrently": "^6.3.0",
    "cross-env": "^7.0.3",
    "eslint": "7",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "nodemon": "^2.0.13",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "start": "node dist/index.js",
    "start:dev": "cross-env NODE_ENV=development concurrently yarn:*:watch",
    "start:watch": "nodemon dist/index.js",
    "type": "tsc -noEmit",
    "type:watch": "tsc -noEmit --watch",
    "build": "node esbuild.config.js",
    "build:watch": "cross-env NODE_ENV=development node esbuild.config.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.17.13",
    "esbuild": "^0.13.2",
    "express": "^4.17.1"
  }
}